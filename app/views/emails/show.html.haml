- content_for :head do
  = @email.subject

- content_for :description do
  - @newsletter = Newsletter.find @email.newsletter_id
  = @newsletter.description

- if @email.admin_email
  - set_meta_tags nofollow: true

%div.row
  %h1
    = @email.subject
%div.row.col-md-12
- if @email.raw_html && !@email.raw_html.empty?
  = raw @email.raw_html.html_safe
- else
  = raw @email.body.html_safe


