!!!
%html.no-js{lang: 'en'}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: 'width=device-width, initial-scale=1.0', name: 'viewport'}
    %title= content_for?(:title) ? yield(:title) : I18n.t('brand.name')
    %meta{content: (content_for?(:description) ? yield(:description) : I18n.t('brand.name')), name: 'description'}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    /[if lt IE 9]
    = javascript_include_tag 'ie', 'data-turbolinks-track' => true
    = javascript_include_tag 'head', 'data-turbolinks-track' => true
    = javascript_include_tag "//www.google.com/jsapi", "chartkick"
    = headjs_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = yield :head
    = render 'layouts/airbrake'
  %body{class: "controller__#{controller_name} action__#{action_name}"}
    .site-wrapper
      .col-small-12
        .errors__container
          = render 'layouts/messages'
      .col-md-3.col-small-12
        = render 'layouts/sidebar'
        = render 'layouts/navigation'
        %footer.page__footer
          - if content_for? :footer
            = yield :footer
          - else
            = render 'layouts/footer'
      .col-md-9.col-small-12
        - if defined? @has_search
          .row
            .hero-lead
              %h2.lead
                .image-container.col-md-1.col-sm-3
                  =image_tag 'email.png'
                Curating and monitoring the best <br>content arriving in your inbox.
            %hr
            = render 'layouts/search_large'
        = yield
        .main-footer
    %footer
    = render 'layouts/analytics'
    = render 'layouts/javascripts'
