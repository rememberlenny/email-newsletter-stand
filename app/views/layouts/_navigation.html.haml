%div{role: 'navigation'}
  %ul.list-unstyled
    - if user_signed_in?
      %li
      - if current_user.is_admin?
        %li= link_to I18n.t('admin.link'), rails_admin_path, data: {"no-turbolink" => true}
      %li= link_to I18n.t('account.edit.link'), edit_user_registration_path
      %li= link_to I18n.t('auth.logout.link'), destroy_user_session_path, rel: :nofollow
    - unless user_signed_in?
      %li= link_to I18n.t('auth.signup.link'), new_user_registration_path
      %li= link_to I18n.t('auth.login.link'), new_user_session_path
    %li= link_to 'About', about_path
    %li= link_to 'Status', status_path
    %li= link_to 'Contact', contact_path

  .panel
    %form{:action => "https://tinyletter.com/emailnewsletterstand", :method => "post", :onsubmit => "window.open('https://tinyletter.com/emailnewsletterstand', 'popupwindow', 'scrollbars=yes,width=800,height=600');return true", :style => "padding:3px;text-align:left;", :target => "popupwindow"}
      %h4
        = link_to 'https://tinyletter.com/emailnewsletterstand' do
          We have a newsletter too
      %p
        %input#tlemail{:name => "email", :type => "text", :class => 'form-control', :placeholder => 'Your email'}/
      %input{:name => "embed", :type => "hidden", :value => "1"}/
      %input{:type => "submit", :value => "Stay in the know", :class => 'btn btn-primary'}/

  %ul.list-unstyled
    %li
      %h4
        = link_to 'All Newsletters', newsletters_path
    %li
      = link_to 'Design Newsletters', tag_path(tag: 'design')
    %li
      = link_to 'News Newsletters', tag_path(tag: 'news')
    %li
      = link_to 'Media Newsletters', tag_path(tag: 'media')
    %li
      = link_to 'International News Newsletters', tag_path(tag: 'International')
    %li
      = link_to 'Programming Newsletters', tag_path(tag: 'programming')
    %li
      = link_to 'Fun Newsletters', tag_path(tag: 'entertainment')
    %li
      = link_to 'Startup Newsletters', tag_path(tag: 'startup')
    %li
      = link_to 'Entrepreneurship Newsletters', tag_path(tag: 'entrepreneurship')
